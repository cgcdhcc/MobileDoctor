<?xml version="1.0" encoding="utf-8"?>
<!--  -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
     >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/tl_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_icon"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                />

            <TextView
                android:id="@+id/tv_itemDesc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="false"
                android:text="医嘱描述医嘱描述医"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_content"
                android:textStyle="normal" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/tv_doseQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="[单次剂量]"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_content"
                android:textStyle="normal" >
            </TextView>
            <TextView
                android:id="@+id/tv_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="[数量]"
                android:textColor="#999999"
                android:textSize="@dimen/sp_content"
                android:textStyle="normal" >
            </TextView>
            <TextView
                android:id="@+id/tv_frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="[频次]"
                android:textColor="#999999"
                android:textSize="@dimen/sp_content"
                android:textStyle="normal" >
            </TextView>
            <TextView
                android:id="@+id/tv_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="false"
                android:text="[用法]"
                android:textColor="#999999"
                android:textSize="@dimen/sp_content"
                android:textStyle="normal" >
            </TextView>
            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="2014-01-01,状态"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_content"
                android:textStyle="normal" >
            </TextView>

            <Button
                android:id="@+id/btn_stop_or_cancel"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:visibility="gone"
                android:textSize="@dimen/sp_content"
                android:textColor="@color/white"
                android:layout_marginLeft="6dp"
                android:background="@color/mobile_blue"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_detail"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="状态"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>

                <TextView
                    android:id="@+id/tv_orderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="orderStatus"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="优  先  级："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>

                <TextView
                    android:id="@+id/tv_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="priority"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="单次剂量："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="数        量："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="频        次："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="用        法："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="开立医生："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>

                <TextView
                    android:id="@+id/tv_orderDoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="orderDoctor"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="停止医生："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>

                <TextView
                    android:id="@+id/tv_stopOrderDoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="stopOrderDoctor"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="开始日期："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>

                <TextView
                    android:id="@+id/tv_ordStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="ordStartDate"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="开始时间："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>

                <TextView
                    android:id="@+id/tv_ordStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="ordStartTime"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="停止日期："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>

                <TextView
                    android:id="@+id/tv_stopOrderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="stopOrderDate"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="停止时间："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>

                <TextView
                    android:id="@+id/tv_stopOrderTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="stopOrderDate"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_content"
                    android:textStyle="normal" >
                </TextView>
            </TableRow>
        </TableLayout>

        
    </LinearLayout>

</LinearLayout>