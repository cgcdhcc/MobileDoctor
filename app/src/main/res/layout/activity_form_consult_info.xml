<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/dhcc_white_head"></include>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="患者姓名："
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/font_14dp" />

                    <TextView
                        android:id="@+id/tv_patName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColor="@color/text_base"
                        android:textSize="@dimen/font_14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="病房床号："
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/font_14dp" />

                    <TextView
                        android:id="@+id/tv_patBed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_base"
                        android:textSize="@dimen/font_14dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/background" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会诊类型："
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/font_14dp" />

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_base"
                        android:textSize="@dimen/font_14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="院内院外："
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/font_14dp" />

                    <TextView
                        android:id="@+id/tv_inOut"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_base"
                        android:textSize="@dimen/font_14dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/background" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="申请科室："
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/font_14dp" />

                    <TextView
                        android:id="@+id/tv_appLoc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="未知"
                        android:textColor="@color/text_base"
                        android:textSize="@dimen/font_14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="申请医生："
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/font_14dp" />

                    <TextView
                        android:id="@+id/tv_appDoc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_base"
                        android:textSize="@dimen/font_14dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/background" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="申请时间："
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/font_14dp" />

                    <TextView
                        android:id="@+id/tv_appDateTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="未知"
                        android:textColor="@color/text_base"
                        android:textSize="@dimen/font_14dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="简要病历、会诊目的："
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/font_14dp" />

                <TextView
                    android:id="@+id/tv_intent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/text_base"
                    android:textSize="@dimen/font_14dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/background" />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主要诊断："
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/font_14dp" />

                    <TextView
                        android:id="@+id/tv_mainDiag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:textColor="@color/text_base"
                        android:textSize="@dimen/font_14dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="临床申请使用："
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/font_14dp" />
                <TextView
                    android:id="@+id/tv_appArcim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/text_base"
                    android:textSize="@dimen/font_14dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/background" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会诊意见："
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/font_14dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_shape_white_black_corner"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_conAttitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:gravity="top|left"
                        android:minLines="3"
                        android:padding="5dp"
                        android:textColor="@color/text_base"
                        android:textSize="@dimen/font_14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="医生意见："
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/font_14dp" />

                   <CheckBox
                       android:layout_marginLeft="10dp"
                       android:text="同意"
                       android:textColor="@color/text_base"
                       android:textSize="@dimen/font_14dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/cb_agree"
                       android:checked="true"/>
                    <CheckBox
                        android:layout_marginLeft="10dp"
                        android:text="拒绝"
                        android:textColor="@color/text_base"
                        android:textSize="@dimen/font_14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cb_refuse"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <TextView
                        android:background="@drawable/button_shape_blue_gradient"
                        android:id="@+id/btn_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="更新会诊意见"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14dp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:background="@drawable/button_shape_blue_gradient"
                        android:id="@+id/btn_doCharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="会诊记录计费"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14dp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>