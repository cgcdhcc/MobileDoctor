<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/frg_bg"
            android:layout_height="180dp">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/headLayout"
            android:layout_width="fill_parent"
            android:layout_height="40.5dp"
            >
            <ImageView
                android:id="@+id/iv_scan"
                android:layout_marginLeft="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/frg_scan"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/tv_centerTitle"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:gravity="center"
                android:text="移动医生"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:singleLine="true" />

            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/iv_word"
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/frg_word"
                android:layout_gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="40.5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.imedical.mobiledoctor.widget.CircleImageView
                android:id="@+id/re_civ_photo"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/dhead1_icon" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_name"
                    android:layout_marginTop="10dp"
                    android:textSize="26dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="东华医生"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/tv_name"
                    android:layout_alignBottom="@id/tv_name"
                    android:textSize="@dimen/font_18dp"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="欢迎您"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_department"
                    android:layout_below="@id/tv_name"
                    android:textSize="@dimen/font_18dp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="心电内科"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_title"
                    android:layout_toRightOf="@id/tv_department"
                    android:layout_marginLeft="10dp"
                    android:layout_alignBottom="@id/tv_department"
                    android:textSize="@dimen/font_18dp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="主治医师"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="140.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:background="@drawable/bg_shape_index"
            android:layout_height="110dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待解决"
                android:textSize="@dimen/font_14dp"
                android:textColor="@color/mobile_gray"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/font_14dp"
                android:textColor="@color/mobile_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-01-07"
                android:textSize="@dimen/font_14dp"
                android:textColor="@color/mobile_gray"
                />
        </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/frg_line"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:textColor="@color/mobile_orange"
                        android:textSize="@dimen/font_36dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="门急诊"
                        android:textColor="@color/mobile_gray"
                        android:textSize="@dimen/font_14dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="1dp"
                    android:layout_gravity="center"
                    android:textColor="@color/mobile_gray"
                    android:layout_height="30dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="@color/mobile_orange"
                        android:textSize="@dimen/font_36dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="图文"
                        android:textColor="@color/mobile_gray"
                        android:textSize="@dimen/font_14dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="1dp"
                    android:layout_gravity="center"
                    android:textColor="@color/mobile_gray"
                    android:layout_height="30dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/mobile_orange"
                        android:textSize="@dimen/font_36dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="视频"
                        android:textColor="@color/mobile_gray"
                        android:textSize="@dimen/font_14dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="1dp"
                    android:layout_gravity="center"
                    android:textColor="@color/mobile_gray"
                    android:layout_height="30dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="@color/mobile_orange"
                        android:textSize="@dimen/font_36dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="住院"
                        android:textColor="@color/mobile_gray"
                        android:textSize="@dimen/font_14dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/frg_bg_right"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/frg_icon_right"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="线上问诊"
                android:textSize="@dimen/font_18dp"
                android:textStyle="bold"

                android:layout_marginLeft="10dp"
                android:textColor="@color/mobile_index_green"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/frg_bg_left"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/frg_icon_left"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="住院查房"
                android:textSize="@dimen/font_18dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"

                android:textColor="@color/mobile_orange"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/mobile_gray"
        android:layout_height="5dp" />
    <TextView
        android:layout_width="match_parent"
        android:text="个人工作台"
        android:padding="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
</LinearLayout>