<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#F5F5F5"
    android:layout_height="match_parent">
    <include layout="@layout/dhcc_white_head"></include>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.5dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
     <LinearLayout
         android:layout_width="match_parent"
         android:background="@color/white"
         android:orientation="vertical"
         android:layout_marginLeft="30dp"
         android:layout_marginRight="30dp"
         android:layout_height="wrap_content">
         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_height="wrap_content">
             <com.imedical.mobiledoctor.widget.CircleImageView
                 android:id="@+id/re_civ_photo"
                 android:layout_marginLeft="20dp"
                 android:layout_marginTop="20dp"
                 android:layout_marginRight="10dp"
                 android:layout_marginBottom="10dp"
                 android:layout_width="70dp"
                 android:layout_height="70dp"
                 android:layout_gravity="center"
                 android:scaleType="centerCrop"
                 android:src="@drawable/dhead1_icon" />
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
                 <TextView
                     android:layout_width="wrap_content"
                     android:id="@+id/tv_name"
                     android:layout_marginTop="30dp"
                     android:textSize="@dimen/font_18dp"
                     android:paddingTop="5dp"
                     android:textColor="@color/black"
                     android:textStyle="bold"
                     android:text="东华医生"
                     android:layout_height="wrap_content" />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_toRightOf="@id/tv_name"
                     android:layout_alignBottom="@id/tv_name"
                     android:id="@+id/tv_alias"
                     android:textSize="@dimen/font_16dp"
                     android:layout_marginLeft="10dp"
                     android:layout_marginTop="10dp"
                     android:textColor="@color/gray"
                     android:text="欢迎您"
                     android:layout_height="wrap_content" />
                 <TextView
                     android:layout_width="wrap_content"
                     android:id="@+id/tv_department"
                     android:layout_below="@id/tv_name"
                     android:textSize="@dimen/font_16dp"
                     android:paddingTop="5dp"
                     android:textColor="@color/gray"
                     android:text="青医附院"
                     android:layout_height="wrap_content" />
                 <TextView
                     android:layout_width="wrap_content"
                     android:id="@+id/tv_depat"
                     android:layout_toRightOf="@id/tv_department"
                     android:layout_marginLeft="10dp"
                     android:layout_alignBottom="@id/tv_department"
                     android:textSize="@dimen/font_16dp"
                     android:paddingTop="5dp"
                     android:textColor="@color/gray"
                     android:text="主治医师"
                     android:layout_height="wrap_content" />
             </RelativeLayout>
         </LinearLayout>
          <ImageView
              android:layout_gravity="center"
              android:id="@+id/iv_qr"
              android:layout_marginTop="30dp"
              android:layout_marginBottom="30dp"
              android:layout_width="200dp"
              android:src="@drawable/icon"
              android:layout_height="200dp" />
         <TextView
             android:layout_width="match_parent"
             android:text="扫描二维码，随时找我咨询"
             android:gravity="center"
             android:textSize="@dimen/font_14dp"
             android:layout_marginBottom="20dp"
             android:layout_height="wrap_content" />
     </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
</LinearLayout>