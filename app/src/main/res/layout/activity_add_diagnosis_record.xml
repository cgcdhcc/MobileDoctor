<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/dhcc_white_head" />
        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_16dp"
            android:text="提交"
            android:layout_gravity="right|center_vertical"
            android:padding="10dp"
            android:textColor="@color/basecolor"
            />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_shape_white_corner"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_user_small_head" />

            <TextView
                android:id="@+id/tv_patientName"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_base"
                android:textSize="@dimen/font_14dp"
                android:text="张三"/>
            <TextView
                android:id="@+id/tv_patientAge"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/font_14dp"
                android:text="男 | 23岁"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

           <LinearLayout
               android:layout_marginLeft="25dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="horizontal"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/text_gray"
                   android:textSize="@dimen/font_14dp"
                   android:text="登记号："/>
               <TextView
                   android:id="@+id/tv_patientCard"
                   android:layout_marginLeft="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/text_base"
                   android:textSize="@dimen/font_14dp"
                   android:singleLine="true"
                   android:text="12223123121"/>

           </LinearLayout>
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layerType="software"
            android:background="@drawable/image_dot_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="bottom">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_doctor_small_head" />

            <TextView
                android:id="@+id/tv_doctorName"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_base"
                android:textSize="@dimen/font_14dp"
                android:text="张三"/>
            <TextView
                android:id="@+id/tv_departmentName"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/font_14dp"
                android:layout_marginRight="10dp"
                android:text="内科 主治医师"/>
            <TextView
                android:singleLine="true"
                android:id="@+id/tv_doctorTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grayblack"
                android:textSize="@dimen/font_14dp"
                android:text="内科 主治医师"/>
        </LinearLayout>
    </LinearLayout>
  <ScrollView
      android:layout_width="match_parent"
      android:background="@color/white"
      android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:background="@color/background"
          android:layout_height="wrap_content">
          <LinearLayout
              android:padding="10dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="医生建议"
                  android:textSize="@dimen/font_16dp"
                  android:textColor="@color/text_base"/>
              <EditText
                  android:id="@+id/et_msgContent"
                  android:layout_marginTop="10dp"
                  android:hint="医者父母心，多写些建议给患者吧"
                  android:gravity="top|left"
                  android:textColorHint="@color/text_gray"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black"
                  android:textSize="@dimen/font_14dp"
                  android:minLines="5"
                  android:background="@drawable/bg_shape_input_black"/>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">

              </LinearLayout>


          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_marginTop="10dp"
              android:padding="10dp"
              android:background="@color/white"
              android:layout_height="wrap_content">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:layout_height="40dp">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="检验检查"
                      android:textSize="@dimen/font_16dp"
                      android:textColor="@color/text_base"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:id="@+id/tv_input"
                      android:layout_weight="1"
                      android:gravity="right"
                      android:layout_height="wrap_content"
                      android:text="录入检验检查  "
                      android:textSize="@dimen/font_16dp"
                      android:textColor="@color/basecolor"/>
                  <ImageView
                      android:layout_width="18dp"
                      android:layout_height="18dp"
                      android:src="@drawable/all_arrow" />
              </LinearLayout>
              <TextView
                  android:layout_width="match_parent"
                  android:background="@color/gray"
                  android:layout_height="0.5dp" />
              <LinearLayout
                  android:layout_marginTop="1dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/ll_content">
              </LinearLayout>
          </LinearLayout>

      </LinearLayout>


  </ScrollView>

</LinearLayout>
