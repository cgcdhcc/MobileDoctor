<?xml version="1.0" encoding="utf-8"?>
<!--  -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <include layout="@layout/page_head"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="36dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/page1_1"
                    android:layout_height="15dp" />
                <TextView
                    android:text="基本信息"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">
                <TableRow>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_margin="5dp"
                     android:paddingLeft="10dp"
                     android:text="姓名:"
                     android:textSize="@dimen/sp_content"
                     android:textColor="@color/gray"
                     />
                 <TextView
                     android:layout_weight="1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_margin="5dp"
                     android:text="AAA"
                     android:id="@+id/tv_patName"
                     android:textSize="@dimen/sp_content"
                     android:textColor="@color/black"
                     />
                 <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_margin="5dp"
                 android:text="性别:"
                 android:textSize="@dimen/sp_content"
                 android:textColor="@color/gray"
                 />
                 <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                     android:id="@+id/tv_patSex"

                     android:layout_margin="5dp"
                 android:text="BBB"
                   android:layout_weight="1"
                        android:textSize="@dimen/sp_content"
                        android:textColor="@color/black"              />
                 <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_margin="5dp"
                 android:text="年龄:"
                 android:textSize="@dimen/sp_content"
                 android:textColor="@color/gray"
                 />
                 <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_margin="5dp"
                 android:layout_weight="1"
                 android:text="CCC"
                     android:id="@+id/tv_patAge"

                     android:textSize="@dimen/sp_content"
                 android:textColor="@color/black"
                 />
             </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingLeft="10dp"
                        android:text="血型:"
                        android:textSize="@dimen/sp_content"
                        android:textColor="@color/gray"
                        />
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="AAA"
                        android:id="@+id/tv_bloodType"

                        android:textSize="@dimen/sp_content"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="职业:"
                        android:textSize="@dimen/sp_content"
                        android:textColor="@color/gray"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="BBB"
                        android:id="@+id/tv_occupation"

                        android:layout_weight="1"
                        android:textSize="@dimen/sp_content"
                        android:textColor="@color/black"              />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="登记号："
                        android:textSize="@dimen/sp_content"
                        android:textColor="@color/gray"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:text="CCC"
                        android:id="@+id/tv_patRegNo"
                        android:textSize="@dimen/sp_content"
                        android:textColor="@color/black"
                        />
                </TableRow>
            </TableLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layerType="software"
                android:layout_marginRight="20dp"
                android:background="@drawable/dash_line"
                android:layout_height="5dp" />
			<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
	android:layout_margin="5dp"
                	android:paddingLeft="20dp"
                	                    android:text="婚姻"
                    android:textSize="@dimen/sp_content" 
                    android:textColor="@color/new_font_blue"
                        />
                     <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
					android:layout_margin="5dp"
                	 android:id="@+id/tv_marital"
                	                    android:text="未知"
                    android:textSize="@dimen/sp_content"
                    android:textColor="@color/black"
                        />
                </LinearLayout>
                <TextView 
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/new_line_gray"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                </LinearLayout>
               
            </LinearLayout>
            
			<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                	android:layout_margin="5dp"
                	android:paddingLeft="10dp"
                    android:text="过  敏  史"
                    android:textSize="@dimen/sp_content" 
                    android:textColor="@color/new_font_blue"
                        />

                     <TextView
                         android:id="@+id/tv_allergies"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_margin="5dp"
                         android:singleLine="false"
                         android:layout_weight="1"
                         android:text="未知"
                         android:textColor="@color/gms_red"
                         android:textSize="@dimen/sp_content" />

                </LinearLayout>
               
            </LinearLayout>
			
			<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingLeft="10dp"
                        android:text="住院科室"
                        android:textColor="@color/new_font_blue"
                        android:textSize="@dimen/sp_content" />

                     <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    	android:layout_margin="5dp"
                	    android:id="@+id/tv_departmentName"
                    android:text="未知"
                    android:textSize="@dimen/sp_content"
                    android:textColor="@color/black"
                        />
                </LinearLayout>
                <TextView 
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/new_line_gray"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingLeft="10dp"
                        android:text="主管医生"
                        android:textColor="@color/new_font_blue"
                        android:textSize="@dimen/sp_content" />

                     <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    	android:layout_margin="5dp"
                	        android:id="@+id/tv_mainDoctor"
                    android:text="未知"
                    android:textSize="@dimen/sp_content"
                    android:textColor="@color/black"
                        />
                </LinearLayout>
                <TextView 
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/new_line_gray"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                	android:layout_margin="5dp"
                	android:paddingLeft="10dp"
                    android:text="床  位  号"
                    android:textSize="@dimen/sp_content" 
                    android:textColor="@color/new_font_blue"
                        />
                     <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    	android:layout_margin="5dp"
                	            android:id="@+id/tv_bedCode"
                    android:text="未知"
                    android:textSize="@dimen/sp_content"
                    android:textColor="@color/black"
                        />
                </LinearLayout>
               <TextView 
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/new_line_gray"
                    />
<LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingLeft="10dp"
                        android:text="入院日期"
                        android:textColor="@color/new_font_blue"
                        android:textSize="@dimen/sp_content" />

                     <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    	android:layout_margin="5dp"
                	        android:id="@+id/tv_inDate"
                    android:text="未知"
                    android:textSize="@dimen/sp_content"
                    android:textColor="@color/black"
                        />
                </LinearLayout>
<TextView 
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/new_line_gray"
                    />
<LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                	android:layout_margin="5dp"
                	android:paddingLeft="10dp"
                    android:text="入院天数"
                    android:textSize="@dimen/sp_content" 
                    android:textColor="@color/new_font_blue"
                        />
                     <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    	android:layout_margin="5dp"
                	            android:id="@+id/tv_inDays"
                    android:text="未知"
                    android:textSize="@dimen/sp_content"
                    android:textColor="@color/black"
                        />
                </LinearLayout>
            </LinearLayout>
			
			<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingLeft="10dp"
                        android:text="护理级别"
                        android:textColor="@color/new_font_blue"
                        android:textSize="@dimen/sp_content" />

                     <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    	android:layout_margin="5dp"
                	    android:id="@+id/tv_careLevel"
                    android:text="未知"
                    android:textSize="@dimen/sp_content"
                    android:textColor="@color/black"
                        />
                </LinearLayout>
                <TextView 
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/new_line_gray"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingLeft="10dp"
                        android:text="病情状况"
                        android:textColor="@color/new_font_blue"
                        android:textSize="@dimen/sp_content" />

                     <TextView 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    	android:layout_margin="5dp"
                	        android:id="@+id/tv_condition"
                    android:text="未知"
                    android:textSize="@dimen/sp_content"
                    android:textColor="@color/black"
                        />
                </LinearLayout>
            </LinearLayout>
			
			<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingLeft="10dp"
                        android:text="病人类型"
                        android:textColor="@color/new_font_blue"
                        android:textSize="@dimen/sp_content" />

                     <TextView
                         android:id="@+id/tv_payType"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_margin="5dp"
                         android:layout_weight="1"
                         android:text="未知"
                         android:textColor="@color/black"
                         android:textSize="@dimen/sp_content" />

                </LinearLayout>
                <TextView 
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/new_line_gray"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingLeft="10dp"
                        android:text="预  交  金"
                        android:textColor="@color/new_font_blue"
                        android:textSize="@dimen/sp_content" />

                     <TextView
                         android:id="@+id/tv_deposit"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_margin="5dp"
                         android:layout_weight="1"
                         android:text="未知"
                         android:textColor="@color/black"
                         android:textSize="@dimen/sp_content" />

                </LinearLayout>
                <TextView 
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/new_line_gray"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingLeft="10dp"
                        android:text="总  费  用"
                        android:textColor="@color/new_font_blue"
                        android:textSize="@dimen/sp_content" />

                     <TextView
                         android:id="@+id/tv_total"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_margin="5dp"
                         android:layout_weight="1"
                         android:text="未知"
                         android:textColor="@color/black"
                         android:textSize="@dimen/sp_content" />

                </LinearLayout>
               <TextView 
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/new_line_gray"
                    />
<LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingLeft="10dp"
                        android:text="自付金额"
                        android:textColor="@color/new_font_blue"
                        android:textSize="@dimen/sp_content" />

                     <TextView
                         android:id="@+id/tv_patShare"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_margin="5dp"
                         android:layout_weight="1"
                         android:text="未知"
                         android:textColor="@color/black"
                         android:textSize="@dimen/sp_content" />

                </LinearLayout>
            </LinearLayout>
			
            <LinearLayout
                android:id="@+id/layout_content"
                 android:paddingLeft="8dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal" >

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <!-- 下方 -->

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:visibility="gone"
                android:layout_marginRight="6dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" >

                <TableRow android:gravity="center_vertical" >
                </TableRow>

                <TableRow android:gravity="center_vertical" >
                </TableRow>

                <TableRow android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lines="1"
                        android:text="当前病区："
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_content" />

                    <TextView
                        android:id="@+id/tv_wardDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:singleLine="false"
                        android:text="未知"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_content" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>