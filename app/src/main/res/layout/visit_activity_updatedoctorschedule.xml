<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:gravity="center_horizontal">

    <include layout="@layout/dhcc_white_head"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/white"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/tv_timeRangeDesc"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_16dp"
            android:textColor="@color/text_grayblack"
            android:text="上午"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_16dp"
            android:textColor="@color/text_grayblack"
            android:text="号源数："/>
        <EditText
            android:id="@+id/et_regLimit"
            android:padding="5dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_base"
            android:hint="0"
            android:inputType="number"
            android:textSize="14sp"
            android:background="@drawable/bg_shape_input_black_nopadding"
            />


    </LinearLayout>


    <TextView
        android:id="@+id/tv_save"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="保存"
        android:background="@drawable/button_shape_blue_gradient"/>

</LinearLayout>
