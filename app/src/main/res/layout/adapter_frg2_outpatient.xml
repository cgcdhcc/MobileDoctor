<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp" >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="患者姓名"
            android:id="@+id/tv_patName"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="12dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/iv_head"
            android:src="@drawable/all_male"
            android:layout_height="12dp" />
        <TextView
            android:layout_width="match_parent"
            android:text=""
            android:gravity="right"
            android:id="@+id/tv_bedCode"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_16dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="登记号："
            android:textColor="@color/gray"
            android:id="@+id/tv_2"
            android:textSize="@dimen/font_14dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="00012345"
            android:id="@+id/tv_admId"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text=""
            android:gravity="right"
            android:layout_marginLeft="5dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_14dp"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:text="2019-01-01"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:id="@+id/tv_inDate"

            android:textSize="@dimen/font_14dp"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>