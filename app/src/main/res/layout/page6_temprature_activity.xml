<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <include layout="@layout/page_head"></include>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:id="@+id/ll_date"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_left"
            android:layout_marginRight="10dp"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/all_left_arrow"
          />
        <Button
            android:id="@+id/btn_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一周"
            android:textColor="@color/new_font_blue"
            android:textSize="@dimen/sp_content"
            android:textStyle="bold" />
        
       <ImageView
           android:layout_marginLeft="10dp"
            android:id="@+id/btn_right"
           android:layout_marginRight="10dp"
           android:layout_width="34dp"
           android:layout_height="34dp"
           android:src="@drawable/all_arrow"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/ll_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <WebView
            android:id="@+id/webView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white" />
        <include layout="@layout/inner_no_data" />
        <ImageView
            android:id="@+id/iv_no_re"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/icon_nodata"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>