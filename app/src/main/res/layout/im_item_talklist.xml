<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="10dp" >
    <TextView
        android:layout_margin="10dp"
        android:id="@+id/talk_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="10:09"
        android:textSize="12sp"
        android:textColor="@color/text_gray" />
    <LinearLayout
        android:id="@+id/view_left"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_pat_head"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/pat_famale" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/left_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:maxWidth="200dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/im_bg_shape_white_corner"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="我就是想测试下等我i奥金锭我i哦敬爱哦大华农多万吨哇哦的 "
                    android:textColor="@color/text_base"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/left_iv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:gravity="left"
                    android:maxWidth="200dp"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/im_iconfont_tupian" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/left_ll_template"
                    android:orientation="vertical">

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/left_pb_send"
                    android:layout_marginLeft="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:indeterminateTint="#0b9358"
                    android:indeterminateTintMode="src_atop"
                    android:progressTint="#0b9358"
                    />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_right"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">
                <ProgressBar
                    android:id="@+id/right_pb_send"
                    android:layout_marginRight="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:indeterminateTint="#0b9358"
                    android:indeterminateTintMode="src_atop"
                    android:progressTint="#0b9358"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/right_ll_template"
                    android:orientation="vertical">

                </LinearLayout>
                <TextView
                    android:id="@+id/right_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:maxWidth="200dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/im_bg_shape_white_corner"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="我就是想测试下等 "
                    android:textColor="@color/text_base"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/right_iv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:gravity="left"
                    android:maxWidth="200dp"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/im_iconfont_tupian" />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_doctor_head"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/pat_male" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>