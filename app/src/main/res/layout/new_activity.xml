<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/dhcc_white_head"></include>
   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="10dp"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:text="就  诊  人"
           android:textSize="@dimen/font_14dp"
           android:textColor="@color/black"
           android:layout_height="wrap_content" />
       <TextView
           android:layout_width="wrap_content"
           android:text="xxx"
           android:id="@+id/tv_patname"

           android:textSize="@dimen/font_14dp"
            android:layout_marginLeft="10dp"
           android:layout_height="wrap_content" />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="预约时间"
            android:textSize="@dimen/font_14dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:text="xxxx-xx-xx xx:xx"
            android:textSize="@dimen/font_14dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/main_title"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"

        android:text="@string/app_name"
        android:textColor="#ffffff"
        android:textSize="26dp" />

    <TextView
        android:text="房间号"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_room_name"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/hlfTransparent"
        android:textColor="@color/colorWhite"
        android:singleLine="true"
        android:inputType="number"
        android:hint="@string/str_room_id_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="用户名"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_user_name"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/hlfTransparent"
        android:textColor="@color/colorWhite"
        android:singleLine="true"
        android:hint="@string/str_user_id_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="请你在预约时间发起视频"
        android:textSize="@dimen/font_18dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_enter"
        android:text="邀请视频"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/radio_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
