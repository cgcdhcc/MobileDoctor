<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/pat_famale"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">
            <TextView
                android:id="@+id/tv_patientName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/text_base"
                android:textStyle="bold"
                android:textSize="@dimen/font_14dp"
                android:layout_height="wrap_content"
                android:text="张三"
                />
            <TextView
                android:id="@+id/tv_registerDate"
                android:layout_width="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/font_14dp"
                android:layout_height="wrap_content"
                android:text="2019-01-01 12:00"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_patientContent"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:textColor="@color/text_grayblack"
            android:textSize="@dimen/font_14dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="头痛，每天精神都不好，十分疲劳，不知道如何是好"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/ll_video"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/bg_shape_videobutton"
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/ll_end"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/vedio_1"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/font_14dp"
                    android:text="结束诊疗"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/bg_shape_videobutton"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal"
                android:id="@+id/ll_suggest"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/vedio_1"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/font_14dp"
                    android:text="诊疗建议"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_shape_videobutton"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/ll_dzbl"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/video_2"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/font_14dp"
                    android:text="电子病历"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/bg_shape_videobutton"

                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/ll_enter"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/video_3"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/font_14dp"
                    android:text="进入诊间"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
