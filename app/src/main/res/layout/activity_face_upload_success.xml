<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/face_upload_success" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="上传成功"
        android:textColor="@color/basecolor"
        android:textSize="@dimen/font_16dp" />

    <TextView
        android:id="@+id/tv_doctorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text=""
        android:textColor="@color/text_grayblack"
        android:textSize="@dimen/font_14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="现在可使用人脸识别登录"
        android:textColor="@color/text_grayblack"
        android:textSize="@dimen/font_14dp" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/bg_shape_blue"
        android:gravity="center"
        android:padding="10dp"
        android:text="重新登录"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16dp" />


</LinearLayout>
