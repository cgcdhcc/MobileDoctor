<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imedical.mobiledoctor">

    <application
        android:allowBackup="true"
        android:name="com.imedical.mobiledoctor.base.MyApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:theme="@style/AppTheme" >
    <activity
        android:name="com.imedical.mobiledoctor.fragment.MainActivity"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        android:label="@string/app_name">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
        <activity android:name="com.imedical.mobiledoctor.activity.WardRoundActivity" android:screenOrientation="portrait"/>

    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>
