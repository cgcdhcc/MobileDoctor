<?xml version="1.0" encoding="utf-8"?>
<com.dhcc.calendar.widget.SquareLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="40dp"
    android:layout_height="60dp"
    android:background="@drawable/bg_btn_calendar"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_calendar"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_calendar"
        android:textSize="14sp" />

</com.dhcc.calendar.widget.SquareLinearLayout>